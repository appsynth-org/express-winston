{
  "name": "@appsynth-org/express-winston",
  "version": "1.0.0",
  "description": "Appsynth's Winston logger middleware for Express",
  "repository": "git://github.com/appsynth-org/express-winston.git",
  "main": "dist/logger.js",
  "types": "dist/logger.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"  \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublish": "npm run build",
    "prepublishOnly": "npm run test && npm run lint",
    "preversion": "npm run test && npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "jest --config jestconfig.json --verbose",
    "test:coverage": "jest --config jestconfig.json --verbose --coverage"
  },
  "author": "Appsynth",
  "license": "ISC",
  "dependencies": {
    "cuid": "^2.1.8",
    "on-finished": "^2.3.0",
    "traverse": "^0.6.6",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.0.27",
    "@types/on-finished": "^2.3.1",
    "@types/traverse": "^0.6.32",
    "eslint": "^7.7.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-appsynth": "^1.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "express": "^4.17.1",
    "jest": "^26.4.0",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.2.0",
    "tslint-jest": "^1.0.5",
    "typescript": "^3.9.7",
    "winston-transport": "^4.4.0"
  },
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
